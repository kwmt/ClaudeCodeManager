{
  "name": "claude-code-manager",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "cargo:test": "cd src-tauri && cargo test",
    "cargo:test:fast": "./scripts/fast-test.sh",
    "cargo:check": "cd src-tauri && cargo check",
    "cargo:check:fast": "./scripts/fast-check.sh",
    "cargo:clippy": "cd src-tauri && cargo clippy",
    "cargo:fmt": "cd src-tauri && cargo fmt",
    "biome:format": "npx @biomejs/biome format --write src/",
    "fmt": "npm run cargo:fmt && npm run biome:format",
    "lint": "npm run cargo:clippy",
    "check": "npm run cargo:check && tsc --noEmit",
    "check:fast": "npm run cargo:check:fast && tsc --noEmit"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-opener": "^2.5.0",
    "isomorphic-dompurify": "^2.26.0",
    "marked": "^16.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@tauri-apps/cli": "^2.8.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "typescript": "~5.6.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
